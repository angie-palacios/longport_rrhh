<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h1 class="m-0 font-weight-bold">Roles</h1>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-striped" id="tbl_businesses" width="100%" cellspacing="0">
          <thead class="bg-dark text-white rounded">
            <tr>
              <th>Name</th>
              <th>Nit</th>
              <th>Phone</th>
              <th>Address</th>
              <th>Site web</th>
              <th>Email</th>
              <th>Description</th>
              <th>Logo</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @businesses.each do |business| %>
              <tr>
                <td><%= business.name %></td>
                <td><%= business.nit %></td>
                <td><%= business.phone %></td>
                <td><%= business.address %></td>
                <td><%= business.site_web %></td>
                <td><%= business.email %></td>
                <td><%= business.description %></td>
                <td><%= business.logo %></td>
                <td><%= link_to 'Show', business %></td>
                <td><%= link_to 'Edit', edit_business_path(business) %></td>
                <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $("#tbl_businesses").DataTable({
    columnDefs: [{
      targets: [8,9,10],
      orderable: false
    }]
  });
  });
</script>
