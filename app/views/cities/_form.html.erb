<div class="row justify-content-center">
  <div class="col-xl-6 col-lg-10 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-3">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-12">
            <div class="p-4"><%= form_with(model: city, local: true) do |form| %>
                <% if city.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>
                    <ul>
                      <% city.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class="field">
                  <%= form.label :code %>
                  <%= form.text_field :code, id: :city_code, class: "form-control form-control-user", required: true %>
                </div>
                <div class="field">
                  <%= form.label :name_es %>
                  <%= form.text_field :name_es, id: :city_name_es, class: "form-control form-control-user", required: true %>
                </div>
                <div class="field">
                  <%= form.label :name_en %>
                  <%= form.text_field :name_en, id: :city_name_en, class: "form-control form-control-user", required: true %>
                </div>
                <div class="actions">
                  <%= form.submit class:"btn btn-dark btn-user btn-block my-3" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
