<h1>Profile#index</h1>
<p id="notice"><%= notice %></p>
<div class="row justify-content-center m-0 text-center">
  <div class="col-8 text-dark rounded p-4">
    <h1>Users</h1>
    <br>
    <div class="row justify-content-center">
      <table class="table-border-less table-striped ">
        <thead class="bg-dark text-white rounded">
        <th class="p-3">Name</th>
        <th class="p-3">Rol</th>
        <th class="p-3">Email</th>
        <th class="p-3" colspan="3">Options</th>
      </tr>
    </thead>
    <tbody>
      <%# <% puts "--------------------------" %>
      <%#<% puts @users.as_json %>
      <%#<% puts "--------------------------" %>
      <% @users.each do |user| %>
        <tr>
          <td class="p-2" ><%= user.name %></td>
          <td class="p-2" ><%= user.rol_id %></td>
          <td class="p-2" ><%= user.email %></td>
          <td class="p-2" ><%= link_to 'Show', profile_path(user) %></td>
          <td class="p-2" ><%= link_to 'Edit', edit_profile_path(user) %></td>
          <td class="p-2" ><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
