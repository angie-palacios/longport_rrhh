<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h1 class="m-0 font-weight-bold">Users</h1>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-striped" id="tbl_users" width="100%" cellspacing="0">
          <thead class="bg-dark text-white rounded">
            <th>Name</th>
            <th>Rol</th>
            <th>Email</th>
            <th>creado</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <%# <% puts "--------------------------" %>
            <%#<% puts @users.as_json %>
            <%#<% puts "--------------------------" %>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.rol.name %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at %></td>
                <td><%= link_to 'Show', profile_path(user) %></td>
                <td><%= link_to 'Edit', edit_profile_path(user) %></td>
                <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $("#tbl_users").DataTable({
    columnDefs: [{
      targets: [4,5,6],
      orderable: false
    }]
  });
  });
</script>