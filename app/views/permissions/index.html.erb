<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h1 class="m-0 font-weight-bold">Permisos</h1>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-striped" id="tbl_permissions" width="100%" cellspacing="0">
          <thead class="bg-dark text-white rounded">
            <tr>
              <th>Code</th>
              <th>Name</th>
              <th>Description</th>
              <th>Apply</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @permissions.each do |permission| %>
              <tr>
                <td><%= permission.code %></td>
                <td><%= permission.name %></td>
                <td><%= permission.description %></td>
                <td><%= permission.apply %></td>
                <td><%= link_to 'Show', permission %></td>
                <td><%= link_to 'Edit', edit_permission_path(permission) %></td>
                <td><%= link_to 'Destroy', permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <%= link_to 'New Permission', new_permission_path %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $("#tbl_permissions").DataTable({
    columnDefs: [{
      targets: [3,4,5,6],
      orderable: false
    }]
  });
  });
</script>