<%= javascript_tag "window._token = '#{form_authenticity_token}'" %>
<div class="row">
  <!-- Earnings (Monthly) Card Example -->
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <p id="notice"><%= notice %></p>
            <p>
              <strong>Code:</strong>
              <%= @rol.code %>
            </p>
            <p>
              <strong>Name:</strong>
              <%= @rol.name %>
            </p>
            <p>
              <strong>Description:</strong>
              <%= @rol.description %>
            </p>
            <%= link_to 'Edit', edit_rol_path(@rol) %> |
            <%= link_to 'Back', rols_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card border-left-warning shadow h-100 py-2">
    <div class="card-body">
      <div class="row no-gutters align-items-center">
        <div class="col mr-2">
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th> Apply</th>
              </tr>
            </thead>
            <tbody>
              <% @permissions.each do |permission| %>
                <tr>
                  <td><%= permission.name %></td>
                  <td><%= check_box_tag "permissions[apply][]", permission.code, @rol.can?(permission.code), class: 'permissions_apply'%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    status_permission();
  });
  function status_permission(){
    $.each($(".permissions_apply"), function(index){
      $(this).click(function(){
        if($(this).is(":checked")){
            edit_status_permission({
              code: $(this).val(),
              apply: true,
              rol_id: $("#rol_id").val()
            })
        }
        else {
            edit_status_permission({
            code: $(this).val(),
            apply: false,
            rol_id: $("#rol_id").val()
            })
        }
    });
  });
    }
    function edit_status_permission(oParams){
  $.ajax({
    url:"<%= edit_status_permission_rol_path(format: :json) %>",
    data: {
      id: oParams.rol_id,
      code: oParams.code,
      apply: oParams.apply,
      authenticity_token: window._token
    },
    type: "POST",
    success: function(request){
      console.log(request);
    },
    error: function(a, b, c){
      console.log(a);
      console.log(b);
      console.log(c);
    }
  })
    }
</script>
